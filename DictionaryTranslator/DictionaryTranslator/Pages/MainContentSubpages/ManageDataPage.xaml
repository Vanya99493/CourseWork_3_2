<Page x:Class="DictionaryTranslator.Pages.MainContentSubpages.ManageDataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DictionaryTranslator.Pages.MainContentSubpages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      FontSize="14"
      Title="ManageDataPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <ComboBox x:Name="ComboBox_SelectTable" MinWidth="400" Margin="10 10 10 10" Padding="5" VerticalAlignment="Center" SelectionChanged="ComboBox_OnSelectTable"/>
            <ComboBox x:Name="ComboBox_SelectField" MinWidth="400" Margin="10 0 10 0" Padding="5" VerticalAlignment="Center" SelectionChanged="ComboBox_OnSelectField"/>
            <Button Content="DELETE" Click="Button_DeleteField" FontSize="16" BorderThickness="0" Background="SteelBlue" Foreground="White" Margin="10 10 10 10" Padding="5"/>
        </StackPanel>
    </Grid>
</Page>
